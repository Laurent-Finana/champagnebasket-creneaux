{% for color, messages in app.flashes %}

	{% for message in messages %}
		<div id="alert-3" class="flex items-center justify-center space-x-2 w-full mx-auto p-4 text-{{ color }}-800 rounded-lg bg-{{ color }}-100" role="alert">
			<svg class="flex-shrink-0 inline w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
				<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
			</svg>
			<span class="sr-only">Info</span>
			<div>
				<p></p>
				{{ message|striptags('<b>')|raw }}
			</div>

		</div>

	{% endfor %}
{% endfor %}
