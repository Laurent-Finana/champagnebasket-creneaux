{% extends 'base.html.twig' %}

{% block title %}Messagerie
{% endblock %}


{% block body %}

	<section class="container">
		<div class="row">
			<div class="col-12">
				<h1>Messagerie</h1>
				<h2>{{ message.title }}</h2>
				<p>Message de :
					{{ message.sender.pseudo }}</p>
				<p>Le :
					{{ message.createdAt|date }}</p>
				<div>{{ message.content }}</div>

				<a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
					Voir mes dossiers
				</a>
				<a href="{{ path('app_message_received')}}" class="btn btn-primary">Retour à la boîte de réception</a>
			</div>
		</div>
	</section>
	<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
		<div class="offcanvas-header">
			<h2 class="offcanvas-title" id="offcanvasExampleLabel">Mes dossiers</h2>
			<button class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
		</div>
		<div class="offcanvas-body">
			<div class="list-group">
				<a href="{{ path('app_message') }}" class="list-group-item list-group-item-action {% if (app.request.attributes.get('_route') == 'app_message') %}active {% endif %}">Accueil</a>
			</div>
			<div class="list-group">
				<a href="{{ path('app_message_received') }}" class="list-group-item list-group-item-action {% if (app.request.attributes.get('_route') == 'app_message_received') %}active {% endif %}">Boîte de réception</a>
			</div>
			<div class="list-group">
				<a href="{{ path('app_message') }}" class="list-group-item list-group-item-action {% if (app.request.attributes.get('_route') == 'app_message_sent') %}active {% endif %}">Eléments envoyés</a>
			</div>
		</div>
	</div>
{% endblock %}
