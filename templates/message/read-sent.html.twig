{% extends 'base.html.twig' %}

{% block title %}Messagerie
{% endblock %}


{% block body %}

	<div class="my-10  mx-auto">
		<h1 class="mb-8 text-2xl text-center">Message envoyé</h1>
		<section class="flex justify-center space-x-4">
			<p>Message à :</p>
			<p class="text-blue-600">
				{{ message.recipient.firstname }}
				{{ message.recipient.lastname }}</p>
			<p>Le :
				{{ message.createdAt|date("d/m/Y", "Europe/Paris") }}</p>

		</div>
		<h2 class="mb-8 text-xl text-center underline">{{ message.title }}</h2>
		<div class="text-center w-1/2 mx-auto">{{ message.content|nl2br }}</div>

		<a href="{{ path('app_message_received')}}" class="text-sm text-center block mx-auto mt-4 w-64 p-2 border rounded-lg bg-amber-100 text-black border-white hover:border-transparent hover:bg-amber-50">Boîte de réception</a>

	</section>
{% endblock %}
