{% extends 'base.html.twig' %}

{% block title %}Accueil Training-Slots
{% endblock %}

{% block body %}
	<div class="bg-white">

		<div class="relative isolate px-6 pt-6 lg:px-8">
			<div class="mx-auto max-w-2xl py-32 sm:py-48 lg:py-56">
				<div class="text-center">
					<h1 class="text-4xl font-bold tracking-normal text-cyan-600 sm:text-6xl">Bienvenue sur la plateforme
						<br>Training-Slots
					</h1>
					<p class="mt-6 text-lg leading-8 text-gray-600">Consultez, réservez ou modifiez vos créneaux d'entraînement</p>
					<p class="mt-6 text-2xl text-orange-300">Complexe René Tys</p>
					<div class="mt-10 flex items-center justify-center gap-x-6">
						<div>
							{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
								<a href="{{ path('app_logout')}}" class="rounded-md bg-cyan-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:text-cyan-600 hover:bg-orange-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Se déconnecter</a>
							{% else %}
								<a href="{{ path('app_login')}}" class="rounded-md bg-cyan-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:text-cyan-600 hover:bg-orange-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Se connecter</a>

								<p class="mt-3">
									<a href="{{ path('app_register') }}">Pas encore inscrit ? Créer un compte</a>
								</p>

							{% endif %}
						</div>
					</p>
				</div>
			</div>
		</div>
		<div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]" aria-hidden="true">
			<div class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
		</div>
	</div>
</div>{% endblock %}
