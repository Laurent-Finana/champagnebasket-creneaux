{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<div class="relative isolate px-6 pt-6 lg:px-8">
		<div class="mx-auto max-w-4xl py-32 lg:py-48">
			<div class="text-center">
				<h1 class="text-4xl font-bold tracking-normal text-cyan-600 sm:text-5xl">Bienvenue sur la plateforme des créneaux d'entrainements du
					<br>Champagne Basket
				</h1>
				<p class="mt-6 text-lg leading-8 text-gray-600">Consultez, réservez ou modifiez vos créneaux d'entraînement</p>
				<p class="mt-6 text-2xl text-orange-300">Complexe René Tys</p>
				<div class="mt-10 flex items-center justify-center gap-x-6">
					<div>
						{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
							<a href="{{ path('app_logout')}}" class="rounded-xl bg-cyan-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:text-cyan-600 hover:bg-orange-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Se déconnecter</a>
						{% else %}
							<a href="{{ path('app_login')}}" class="rounded-xl bg-cyan-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:text-cyan-600 hover:bg-orange-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Se connecter</a>

							<p class="mt-3">
								<a href="{{ path('app_register') }}">Pas encore inscrit ? Créer un compte</a>
							</p>

						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
